  <!-- modal for demo -->
  <div class="modal" id="modal">
    <div class="modal-card">
      <h3 style="margin:0 0 6px">Interactive demo</h3>
      <p style="margin:0 0 12px;font-size:13px;opacity:0.9">This small demo shows dynamic content, an animated counter and a form.</p>
      <div style="display:flex;gap:8px;margin-bottom:12px">
        <button class="btn btn-primary" id="startCounter">Start Counter</button>
        <button class="btn btn-ghost" id="stopCounter">Stop</button>
      </div>

      <div style="display:flex;justify-content:center;align-items:center;margin-bottom:12px">
        <div id="counter" style="font-weight:800;font-size:28px">0</div>
      </div>

      <label style="font-size:13px;opacity:0.9">Send a message</label>
      <div style="display:flex;gap:8px;margin-top:8px">
        <input id="msg" placeholder="Type something" style="flex:1;padding:8px;border-radius:10px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:inherit" />
        <button class="btn btn-primary" id="sendMsg">Send</button>
      </div>

      <div style="text-align:right;margin-top:12px"><button class="btn btn-ghost" id="closeModal">Close</button></div>
    </div>
  </div>

  <script>
    // Simple JavaScript interactions to match the video's interactivity.
    const openDemo = document.getElementById('openDemo');
    const showCode = document.getElementById('showCode');
    const modal = document.getElementById('modal');
    const closeModal = document.getElementById('closeModal');
    const startCounter = document.getElementById('startCounter');
    const stopCounter = document.getElementById('stopCounter');
    const counterEl = document.getElementById('counter');
    const previewArea = document.getElementById('previewArea');
    const sendMsg = document.getElementById('sendMsg');
    const msgInput = document.getElementById('msg');

    let counter = 0;
    let timer = null;

    openDemo.addEventListener('click', ()=>{
      modal.classList.add('active');
    });
    closeModal.addEventListener('click', ()=>{
      modal.classList.remove('active');
    });

    startCounter.addEventListener('click', ()=>{
      if(timer) return;
      timer = setInterval(()=>{ counter++; counterEl.textContent = counter; }, 300);
    });
    stopCounter.addEventListener('click', ()=>{
      clearInterval(timer); timer = null;
    });

    sendMsg.addEventListener('click', ()=>{
      const text = msgInput.value.trim();
      if(!text) return alert('Type something first');
      // show message briefly in preview area
      previewArea.textContent = text;
      previewArea.animate([
        {transform:'translateY(8px)', opacity:0},
        {transform:'translateY(0)', opacity:1}
      ],{duration:400, easing:'cubic-bezier(.2,.9,.3,1)'});
      msgInput.value = '';
      setTimeout(()=>{ previewArea.textContent = 'Live preview area — animations run here'; }, 2200);
    });

    // show code button opens a small new window with the page's HTML (for quick inspection in VS)
    showCode.addEventListener('click', ()=>{
      const w = window.open('', '_blank', 'noopener');
      const html = document.documentElement.outerHTML;
      w.document.open();
      w.document.write('<pre style="white-space:pre-wrap;word-break:break-word;padding:16px;background:#071024;color:#dbeafe;">'+escapeHtml(html)+'</pre>');
      w.document.close();
    });

    function escapeHtml(s){ return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    // small flourish: animated gradient on preview area
    let hue = 200;
    setInterval(()=>{
      hue = (hue + 1) % 360;
      previewArea.style.background = `linear-gradient(180deg, hsla(${hue},70%,45%,0.06), hsla(${(hue+60)%360},60%,40%,0.02))`;
    },80);
  </script>
</body>
